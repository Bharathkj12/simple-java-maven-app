pipeline {
    agent {
        docker {
            image 'maven:3.9.4' // Use the Maven Docker image
            args '-v /root/.m2:/root/.m2' // Mount Maven repository for caching dependencies
        }
    }
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk-amd64' // Adjust if Java 11 is installed elsewhere
        MAVEN_OPTS = '-Xmx1024m' // Adjust memory options as needed
    }
    stages {
        stage('Verify Environment') {
            steps {
                sh 'java -version' // Verify Java is available
                sh 'mvn -v'        // Verify Maven is available
            }
        }
        stage('Clean Workspace') {
            steps {
                deleteDir() // Clean up the workspace before starting
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package' // Build the application without tests
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test' // Run unit tests
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' // Publish test results
                }
            }
        }
        stage('Deliver') {
            steps {
                script {
                    // Ensure the deliver script is executable
                    sh 'chmod +x ./jenkins/scripts/deliver.sh'
                }
                sh './jenkins/scripts/deliver.sh' // Execute delivery script
            }
        }
    }
    post {
        always {
            cleanWs() // Clean up the workspace after the pipeline completes
        }
    }
}
